<div class="medium-column">
    <div class="card padded-card">
        <h1><%= @species.common_name %></h1>
        <h2><%= @species.scientific_name %></h2>
        <h3>Discovered <%= @species.year %></h3>
        <h3><%= @species.family_common_name %></h3>
        <img class="plant-image" src="<%= @species.image_url %>">
    </div>
</div>
<div class="medium-column">
    <div class="card padded-card">
        <h1>Users who have this plant</h1>
        <% @users.each do |user| %>
            <h2> <%= user.username %> </h2>
        <% end %>
    </div>
</div>